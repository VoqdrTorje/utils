{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "outDir": "dist/",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "composite": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.json",
  ]
}
